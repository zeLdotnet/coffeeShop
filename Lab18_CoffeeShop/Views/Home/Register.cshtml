
@{
    ViewData["Title"] = "Register";
}


@model Lab18_CoffeeShop.Models.RegisterUser
@using (var form = Html.BeginForm())
{
    <div class="form">
        <div>
            @Html.TextBoxFor(m => m.UserName, new { placeholder = "UserName", @class = "form-input" })
        </div>
        <div>
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-input" })
        </div>
        <div>
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-input", @type = "password" })
        </div>
        <input type="submit" value="Submit" />
    </div>

    <style>
        input {
            margin-bottom: 5px;
        }

        .form {
            text-align: center;
            padding: 160px 0px 50px 0px;
        }
    </style>
}

